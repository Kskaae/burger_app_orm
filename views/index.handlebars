<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center">Burgers!</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <h2>Eat the Burgers!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="col-6">
      <h2>Yuck!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>

    </div>

    <h2 class="text-center">Add a Burger</h2>
  </div>
</div>
<div class="row-center">
  <div class="col-12">
    <form class="create-form">
      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text-center" id="ca" name="name">
      </div>
      <div 
      <img src="pic_trulli.jpg" alt="Italian Trulli">
      </div>
      <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not Devoured
      </div>
      <div class="row">
        <div class="col-12">
          <button type="submit">Add Burger</button>
        </div>
    </form>
  </div>